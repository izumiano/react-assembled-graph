{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Dev",
			"dependsOn": ["Dev:Run", "Dev:Typecheck"],
			"presentation": {
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "npm: build",
			"type": "npm",
			"script": "build",
			"problemMatcher": [],
			"detail": "build",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Dev:Typecheck",
			"type": "npm",
			"script": "dev:typecheck",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"detail": "typecheck project",
			"presentation": {
				"group": "run-all-group",
				"reveal": "always",
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Dev:Run",
			"type": "npm",
			"script": "dev:run",
			"isBackground": true,
			"detail": "start vite",
			"presentation": {
				"group": "run-all-group",
				"reveal": "always",
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": {
				"owner": "vite",
				"fileLocation": "relative",
				"pattern": {
					"regexp": "\\[(ERROR|WARNING|INFO)\\]\\s([^\\s].*)\\((\\d+),(\\d+)\\):\\s(.*)",
					"file": 2,
					"line": 3,
					"column": 4,
					"severity": 1,
					"message": 5
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".*Executing task:.*",
					"endsPattern": ".*VITE v\\d+\\.\\d+\\.\\d+  ready\\.*"
				}
			}
		},
		{
			"type": "npm",
			"script": "lint",
			"label": "biome: check",
			"detail": "check biome",
			"group": {
				"kind": "test",
				"isDefault": false
			}
		},
		{
			"type": "npm",
			"script": "biomeFix",
			"label": "biome: fix",
			"detail": "fix with biome",
			"group": {
				"kind": "test",
				"isDefault": false
			}
		}
	]
}
